<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Pioneer</display-name>

    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>com.elesson.pioneer.web.servlet.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>movies</servlet-name>
        <servlet-class>com.elesson.pioneer.web.servlet.MovieManagerServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>movies</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>event</servlet-name>
        <servlet-class>com.elesson.pioneer.web.servlet.EventServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>event</servlet-name>
        <url-pattern>/event</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.elesson.pioneer.web.servlet.LoginServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>scheduleServlet</servlet-name>
        <servlet-class>com.elesson.pioneer.web.servlet.ScheduleServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>scheduleServlet</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lang</servlet-name>
        <servlet-class>com.elesson.pioneer.web.servlet.LangServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>lang</servlet-name>
        <url-pattern>/lang</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CharacterSetFilter</filter-name>
        <filter-class>com.elesson.pioneer.web.CharacterSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterSetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>accessFilter</filter-name>
        <filter-class>com.elesson.pioneer.web.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>accessFilter</filter-name>
        <servlet-name>users</servlet-name>
        <servlet-name>movies</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>jspFilter</filter-name>
        <filter-class>com.elesson.pioneer.web.JspFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>jspFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

</web-app>